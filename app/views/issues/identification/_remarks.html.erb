<% if issue.remarks.any? %>
    <%
       remarks = {}
       issue.remarks.sort_by(&:id).each do |remark|
           (remarks[remark.author] ||= []) << remark.text
       end
    %>

    <div id="identification-remarks">
        <div class="card bg-info text-white">
            <div class="card-header">
                <i class="fa fa-info-circle"></i>

                System components have attached some insights to this issue.
            </div>

            <div class="card-body">
                <ul class="list-unstyled">
                    <% remarks.each do |commenter, texts| %>
                        <li>
                            <strong>
                                <%= commenter.to_s.humanize %>
                            </strong>

                            <ul>
                                <% texts.each do |text| %>
                                    <li>
                                        <%= text %>
                                    </li>
                                <% end %>
                            </ul>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
<% end %>
